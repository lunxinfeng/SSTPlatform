<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fintech.sst.ui.activity.setting.SettingActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@color/btn_unenable"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="服务管理"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/tv_notice_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawablePadding="6dp"
        android:drawableRight="@mipmap/icon_more"
        android:foreground="?attr/selectableItemBackground"
        android:lines="1"
        android:padding="16dp"
        android:text="通知服务"
        android:textColor="@color/textColorDark3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tv_permission_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawablePadding="6dp"
        android:drawableRight="@mipmap/icon_more"
        android:foreground="?attr/selectableItemBackground"
        android:lines="1"
        android:padding="16dp"
        android:text="权限设置"
        android:textColor="@color/textColorDark3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_notice_setting" />

    <TextView
        android:id="@+id/tv_time_setting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="自动关闭通道时间"
        android:background="@color/white"
        android:drawablePadding="6dp"
        android:drawableRight="@mipmap/icon_more"
        android:lines="1"
        android:padding="16dp"
        android:textColor="@color/textColorDark3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_permission_setting" />

    <TextView
        android:id="@+id/tv_clear_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawablePadding="6dp"
        android:drawableRight="@mipmap/icon_more"
        android:foreground="?attr/selectableItemBackground"
        android:lines="1"
        android:padding="16dp"
        android:text="清除本地数据库"
        android:textColor="@color/textColorDark3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_time_setting" />

    <TextView
        android:id="@+id/tv_exit_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawablePadding="6dp"
        android:drawableRight="@mipmap/icon_more"
        android:foreground="?attr/selectableItemBackground"
        android:lines="1"
        android:padding="16dp"
        android:text="切换账号"
        android:textColor="@color/textColorDark3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_clear_data" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="设置"
        app:titleTextColor="@color/white" />
</android.support.constraint.ConstraintLayout>
